<div class="well well-small clearfix">
    <h3>Name: {{companyname}}</h3>
    <p>Address: {{address}}</p>
    <p>City: {{city}}</p>
    <p>Phone:</p>
    {{#each phone}}
        <p>{{this}}</p>
    {{/each}}
    {{#if email}}
        <p>Email: {{email}}</p>
    {{/if}}
    {{#if email}}
        <p>Website: {{website}}</p>
    {{/if}}
    <p>Rating: {{avg_rating}}, Total Ratings: {{total_ratings}}</p>
</div>

<hr/>